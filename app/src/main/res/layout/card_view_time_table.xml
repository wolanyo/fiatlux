<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:id="@+id/card_view_joke"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginBottom="1dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    android:layout_marginLeft="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/time_table_title"
            style="@style/ListViewTinyTitleStyle"
            android:text="hello"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/time_table_date"
            style="@style/ListViewTinyDateTimeStyle"
            android:text="hello"
            android:layout_below="@id/time_table_title"/>

        <TextView
            android:id="@+id/time_table_time"
            style="@style/ListViewTinyNeutralStyle"
            android:text=" Hello moto"
            android:layout_below="@id/time_table_title"
            android:layout_toRightOf="@id/time_table_date"
            android:elegantTextHeight="true" />

        <TextView
            android:id="@+id/time_table_address"
            style="@style/ListViewTinyNeutralStyle"
            android:text="hello"
            android:layout_below="@id/time_table_time"
            android:elegantTextHeight="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>